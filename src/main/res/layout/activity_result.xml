<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/miku2"
android:screenOrientation="landscape"
android:theme="@style/Theme.AppCompat.NoActionBar"
tools:context=".Result">



<ImageView
    android:id="@+id/btn_continue_to_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="-170dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:srcCompat="@drawable/triangle" />

    <ImageView
        android:layout_width="792dp"
        android:layout_height="414dp"
        android:layout_marginStart="-170dp"
        android:rotationX="180"
        android:rotationY="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/triangle" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="722dp"
        android:layout_height="374dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:columnOrderPreserved="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="      Score"
                android:textSize="35sp"
                tools:fontFamily="sans-serif-condensed-medium" />

            <TextView
                android:id="@+id/final_score"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="1000"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_row="1">

            <TextView
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Hight score "
                android:textSize="25sp" />

            <TextView
                android:id="@+id/high_score"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_row="2">

            <TextView
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Perfect"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/perfect"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:shadowColor="@color/white"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_row="3">

            <TextView
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Good"
                android:textSize="21sp"
                app:layout_column="0" />

            <TextView
                android:id="@+id/good"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_row="4">

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Miss"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="4" />

            <TextView
                android:id="@+id/miss"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/try_again"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D300A576"
            app:layout_column="0"
            app:layout_row="5"
            app:srcCompat="@android:drawable/ic_popup_sync" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="177dp"
            android:layout_height="85dp"
            android:layout_marginBottom="16dp"
            app:layout_column="1"
            app:layout_row="6"
            app:srcCompat="@drawable/resource_continue" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/game_over"
        android:layout_width="725dp"
        android:layout_height="382dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Game Over"
        android:textColor="#C9FFF2"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
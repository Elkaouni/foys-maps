<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/miku2"
android:screenOrientation="landscape"
android:theme="@style/Theme.AppCompat.NoActionBar"
    android:id="@+id/result_background"
tools:context=".Result">



<ImageView
    android:id="@+id/btn_continue_to_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="-170dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:srcCompat="@drawable/triangle" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-170dp"
        android:rotationX="180"
        android:rotationY="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/triangle" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="722dp"
        android:layout_height="374dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:columnOrderPreserved="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="      Score"
                android:textSize="35sp"
                tools:fontFamily="sans-serif-condensed-medium" />

            <TextView
                android:id="@+id/final_score"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="1000"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_row="1">

            <TextView
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Hight score "
                android:textSize="25sp" />

            <TextView
                android:id="@+id/high_score"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_row="2">

            <TextView
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Difficulty"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/difficulty"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:shadowColor="@color/white"
                android:text="Easy"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_row="3">

            <TextView
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Good"
                android:textSize="21sp"
                app:layout_column="0" />

            <TextView
                android:id="@+id/good"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_row="4">

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Miss"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="4" />

            <TextView
                android:id="@+id/miss"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/try_again"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D300A576"
            app:layout_column="0"
            app:layout_row="5"
            app:srcCompat="@android:drawable/ic_popup_sync" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="177dp"
            android:layout_height="85dp"
            android:layout_marginBottom="16dp"
            app:layout_column="1"
            app:layout_row="6"
            app:srcCompat="@drawable/resource_continue" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/tap_to_start"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#9F000000"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/game_over"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game Over"
                android:textAlignment="center"
                android:textColor="#C9FFF2"
                android:textSize="50sp" />
            <TextView
                android:id="@+id/song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textAlignment="center"
                android:textColor="#C9FFF2"
                android:textSize="20sp" />
        </LinearLayout>




    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>
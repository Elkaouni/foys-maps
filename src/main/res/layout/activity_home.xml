<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:id="@+id/background_map"
    android:background="@drawable/background">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/about_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/about_u"
        android:visibility="gone">

        <Button
            android:id="@+id/ok_aboutUS"
            android:layout_width="143dp"
            android:layout_height="47dp"
            android:background="@drawable/about_u"
            android:text="Nice!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.991" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/art"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/menu_art" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/la_belle_aurore"
                    android:text="Wecome, Player!"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/account"
                android:layout_width="68dp"
                android:layout_height="72dp"
                android:layout_gravity="end"
                android:foregroundGravity="right"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/profile_green" />

            <ImageView
                android:id="@+id/about_button"
                android:layout_width="68dp"
                android:layout_height="72dp"
                android:layout_gravity="end"
                android:foregroundGravity="right"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@android:drawable/ic_menu_help" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/box_menu"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="30dp"
            android:paddingTop="60dp"

            >
            <Button
                android:id="@+id/play"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="2dp"
                android:text="Play Game"
                android:textSize="20sp" />

            <Button
                android:id="@+id/settings"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="2dp"
                android:text="Settings"
                android:textSize="20sp" />

            <Button
                android:id="@+id/leave"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="2dp"
                android:text="Quit"
                android:textSize="20sp" />

        </LinearLayout>



    </LinearLayout>

    </LinearLayout>

    <!-- leave pop up -->
    <LinearLayout
        android:id="@+id/leave_popup"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#A6000000"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="7dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            app:cardBackgroundColor="#00000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/la_belle_aurore"
                android:text="Are you sure you want to leave?"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/leave_game"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="20dp"
                android:text="Leave"
                android:textSize="20sp" />

            <Button
                android:id="@+id/stay_in_game"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="20dp"
                android:text="Continue"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
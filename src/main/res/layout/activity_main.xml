            android:id="@+id/btn_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:rotation="90"
            android:visibility="gone"
            app:srcCompat="@android:drawable/bottom_bar"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btn_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:rotation="90"
            android:visibility="gone"
            app:srcCompat="@android:drawable/bottom_bar" />

